{
    "experiment_name": "enc_exp", 
    "results_root": "./test-results", 
    "clean_results_dir": false,

    "cuda": true,
    "gpu": 0, 

    "reconstruction_loss": "chamfer",

    "metrics": ["jsd"], 

    "dataset": "shapenet",
    "data_dir": "./data/shapenet",
    "classes": [],
    "shuffle": true,
    "transforms": ["rotate"],
    "num_workers": 8,
    "n_points": 2048,
    "edit_samples": 16,  

    "max_epochs": 400, 
    "batch_size": 32, 
    "gp_lambda": 10,
    "reconstruction_coef": 0.05,
    "z_size": 2048,
    "distribution": "bernoulli",

    "p": 0.2,
    "z_beta_a": 0.01,
    "z_beta_b": 0.01,

    "normal_mu": 0.0,
    "normal_std": 0.2,

    "seed": 2018,
    "save_frequency": 5,
    "epsilon": 0.001,

    "arch": "dgcnn_aae",
    "model": {
        "D": {
            "dropout": 0.5,
            "use_bias": true,
            "relu_slope": 0.2
        },
        "G": {
            "use_bias": true,
            "relu_slope": 0.2
        },
        "E": {
            "use_bias": true,
            "relu_slope": 0.2
        }
    },
    "optimizer": {
        "D": {
            "type": "Adam",
            "hyperparams": {
                "lr": 0.0005,
                "weight_decay": 0,
                "betas": [0.9, 0.999],
                "amsgrad": false
            }
        },
        "EG": {
            "type": "Adam",
            "hyperparams": {
                "lr": 0.0005,
                "weight_decay": 0,
                "betas": [0.9, 0.999],
                "amsgrad": false
            }
        }
    }, 
    "lr_scheduler": {
        "D": {
            "type": "MultiStepLR",
            "hyperparams": {
                "milestones": [10, 20, 40, 80, 160, 320],
                "gamma": 0.5
            }
        },
        "EG": {
            "type": "MultiStepLR",
            "hyperparams": {
                "milestones": [10, 20, 40, 80, 160, 320],
                "gamma": 0.5
            }
        }
    }
}